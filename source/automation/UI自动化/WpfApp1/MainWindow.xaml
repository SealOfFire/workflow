<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Grid>
        <Label Name="lable" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="pickup" Content="拾取" HorizontalAlignment="Left" Margin="71,13,0,0" VerticalAlignment="Top" Click="pickup_Click" Height="22" Width="49"/>
        <Button x:Name="highlight" Content="高亮" HorizontalAlignment="Left" Margin="136,12,0,0" VerticalAlignment="Top" Click="highlight_Click" Height="22" Width="46"/>
        <TextBox x:Name="selector" HorizontalAlignment="Center" Margin="0,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="218" AcceptsReturn="True"/>
    </Grid>
</Window>
